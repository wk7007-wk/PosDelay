            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="4dp">
        <Button android:id="@+id/btnOpenBaemin" android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1"
            android:text="배민 직접열기" android:textSize="11sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:layout_marginEnd="3dp" />
        <Button android:id="@+id/btnOpenCoupang" android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1"
            android:text="쿠팡 직접열기" android:textSize="11sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:layout_marginStart="3dp" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="8dp">
        <Button android:id="@+id/btnBaeminLogin" android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1"
            android:text="배민 로그인" android:textSize="11sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:layout_marginEnd="3dp" />
        <Button android:id="@+id/btnCoupangLogin" android:layout_width="0dp" android:layout_height="32dp" android:layout_weight="1"
            android:text="쿠팡 로그인" android:textSize="11sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:layout_marginStart="3dp" />
    </LinearLayout>

</LinearLayout>
