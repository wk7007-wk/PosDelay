<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- ══════════ 1. 모니터링 현황 ══════════ -->

    <!-- 헤더: PosDelay + 메인 스위치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PosDelay"
            android:textColor="#E0E0EC"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- 모니터링 현황 카드 -->
    <LinearLayout
        android:id="@+id/layoutMonitorPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <!-- Row 1: 처리중 건수 + 상태 + +/- -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="처리중"
                android:textColor="#9090A8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOrderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="4dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정상"
                android:textColor="#2ECC71"
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnCountMinus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E74C3C"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnCountPlus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2ECC71" />
        </LinearLayout>

        <!-- Row 2: 광고 상태 (신호등) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배민"
                android:textColor="#2AC1BC"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBaeminLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="#707088"
                android:textSize="14sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvMonitorBaemin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#9090A8"
                android:textSize="13sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvBaeminThresholdInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(5/3)"
                android:textColor="#707088"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />

            <View
                android:layout_width="24dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠팡"
                android:textColor="#FFD700"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCoupangLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="#707088"
                android:textSize="14sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvMonitorCoupang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#9090A8"
                android:textSize="13sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvCoupangThresholdInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(5/3)"
                android:textColor="#707088"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <!-- Row 3: 갱신 시간 + 중단 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvLastSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATE --"
                android:textColor="#707088"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="#707088"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPcSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC --"
                android:textColor="#707088"
                android:textSize="12sp" />

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

            <Button
                android:id="@+id/btnPauseMate"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="M가동"
                android:textSize="11sp"
                android:textColor="#FFF"
                android:backgroundTint="#2ECC71"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnPausePc"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="PC가동"
                android:textSize="11sp"
                android:textColor="#FFF"
                android:backgroundTint="#2ECC71"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp" />
        </LinearLayout>

        <!-- Row 4: 마지막 동작 -->
        <TextView
            android:id="@+id/tvLastAdAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마지막: --"
            android:textColor="#707088"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- ══════════ 2. 광고 관리 ══════════ -->
    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="#2A2A45" android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="광고 관리" android:textColor="#E0E0EC" android:textSize="16sp" android:textStyle="bold" />
        <Switch android:id="@+id/switchAdEnable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1순위: 밀림시 자동 조절 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:background="@drawable/bg_card"
            android:padding="14dp" android:layout_marginBottom="8dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="6dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="주문수 자동 광고조절" android:textColor="#E0E0EC" android:textSize="15sp" android:textStyle="bold" />
                <Switch android:id="@+id/switchOrderAutoOff" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <!-- 쿠팡/배민 개별 ON/OFF -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="10dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="쿠팡" android:textColor="#FFD700" android:textSize="13sp" />
                <Switch android:id="@+id/switchCoupangAuto" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:checked="true" android:layout_marginEnd="20dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="배민" android:textColor="#2AC1BC" android:textSize="13sp" />
                <Switch android:id="@+id/switchBaeminAuto" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- 쿠팡 임계값 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                <TextView android:layout_width="48dp" android:layout_height="wrap_content"
                    android:text="쿠팡" android:textColor="#FFD700" android:textSize="15sp" android:textStyle="bold" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="끄기" android:textColor="#E74C3C" android:textSize="14sp" android:layout_marginEnd="4dp" />
                <Button android:id="@+id/btnCoupangOffThMinus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="-" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvCoupangOffTh" android:layout_width="40dp" android:layout_height="wrap_content"
                    android:text="5" android:textColor="#E74C3C" android:textSize="24sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnCoupangOffThPlus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="+" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="켜기" android:textColor="#2ECC71" android:textSize="14sp" android:layout_marginEnd="4dp" />
                <Button android:id="@+id/btnCoupangOnThMinus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="-" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvCoupangOnTh" android:layout_width="40dp" android:layout_height="wrap_content"
                    android:text="3" android:textColor="#2ECC71" android:textSize="24sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnCoupangOnThPlus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="+" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <!-- 배민 임계값 3단계: 각각 1줄 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
                <TextView android:layout_width="48dp" android:layout_height="wrap_content"
                    android:text="배민" android:textColor="#2AC1BC" android:textSize="15sp" android:textStyle="bold" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="최소" android:textColor="#E74C3C" android:textSize="14sp" android:layout_marginEnd="4dp" />
                <Button android:id="@+id/btnBaeminOffThMinus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="-" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminOffTh" android:layout_width="40dp" android:layout_height="wrap_content"
                    android:text="8" android:textColor="#E74C3C" android:textSize="24sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnBaeminOffThPlus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="+" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
                <View android:layout_width="48dp" android:layout_height="0dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="중간" android:textColor="#E67E22" android:textSize="14sp" android:layout_marginEnd="4dp" />
                <Button android:id="@+id/btnBaeminMidThMinus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="-" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminMidTh" android:layout_width="40dp" android:layout_height="wrap_content"
                    android:text="5" android:textColor="#E67E22" android:textSize="24sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnBaeminMidThPlus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="+" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical">
                <View android:layout_width="48dp" android:layout_height="0dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="최대" android:textColor="#2ECC71" android:textSize="14sp" android:layout_marginEnd="4dp" />
                <Button android:id="@+id/btnBaeminOnThMinus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="-" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminOnTh" android:layout_width="40dp" android:layout_height="wrap_content"
                    android:text="3" android:textColor="#2ECC71" android:textSize="24sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnBaeminOnThPlus" android:layout_width="42dp" android:layout_height="42dp"
                    android:text="+" android:textSize="20sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 2순위: 스케줄 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:background="@drawable/bg_card" android:padding="10dp" android:layout_marginBottom="6dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="스케줄" android:textColor="#9090A8" android:textSize="13sp" />
            <Switch android:id="@+id/switchSchedule" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:checked="false" android:layout_marginStart="8dp" />
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="끄기" android:textColor="#E74C3C" android:textSize="12sp" />
            <Button android:id="@+id/btnAdOffTime" android:layout_width="wrap_content" android:layout_height="34dp"
                android:text="22:00" android:textSize="13sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="4dp" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="  켜기" android:textColor="#2ECC71" android:textSize="12sp" />
            <Button android:id="@+id/btnAdOnTime" android:layout_width="wrap_content" android:layout_height="34dp"
                android:text="08:00" android:textSize="13sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- 3순위: 수동 실행 버튼 (확대) -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="4dp">
            <Button android:id="@+id/btnAdManualBaeminNormal" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1"
                android:text="배민 최대" android:textSize="14sp" android:textColor="#FFF" android:backgroundTint="#2ECC71" android:layout_marginEnd="3dp" />
            <Button android:id="@+id/btnAdManualCoupangOn" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1"
                android:text="쿠팡 켜기" android:textSize="14sp" android:textColor="#FFF" android:backgroundTint="#2ECC71" android:layout_marginStart="3dp" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="8dp">
            <Button android:id="@+id/btnAdManualBaeminReduced" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1"
                android:text="배민 최소" android:textSize="14sp" android:textColor="#FFF" android:backgroundTint="#E74C3C" android:layout_marginEnd="3dp" />
            <Button android:id="@+id/btnAdManualCoupangOff" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1"
                android:text="쿠팡 끄기" android:textSize="14sp" android:textColor="#FFF" android:backgroundTint="#E74C3C" android:layout_marginStart="3dp" />
        </LinearLayout>

        <!-- 4순위: 금액 설정 (확대) -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:background="@drawable/bg_card" android:padding="12dp" android:layout_marginBottom="6dp">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="배민 최대 금액" android:textColor="#2ECC71" android:textSize="14sp" android:textStyle="bold" />
                <TextView android:id="@+id/tvBaeminAdStatus" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="현재: --" android:textColor="#707088" android:textSize="12sp" />
            </LinearLayout>
            <Button android:id="@+id/btnBaeminAmountMinus" android:layout_width="38dp" android:layout_height="38dp"
                android:text="-" android:textSize="18sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
            <TextView android:id="@+id/tvBaeminAmount" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="200원" android:textColor="#2ECC71" android:textSize="20sp" android:textStyle="bold"
                android:paddingStart="10dp" android:paddingEnd="10dp" android:minWidth="70dp" android:gravity="center" />
            <Button android:id="@+id/btnBaeminAmountPlus" android:layout_width="38dp" android:layout_height="38dp"
                android:text="+" android:textSize="18sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:background="@drawable/bg_card" android:padding="12dp" android:layout_marginBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:text="배민 중간 금액" android:textColor="#E67E22" android:textSize="14sp" android:textStyle="bold" />
            <Button android:id="@+id/btnBaeminMidAmountMinus" android:layout_width="38dp" android:layout_height="38dp"
                android:text="-" android:textSize="18sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
            <TextView android:id="@+id/tvBaeminMidAmount" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="100원" android:textColor="#E67E22" android:textSize="20sp" android:textStyle="bold"
                android:paddingStart="10dp" android:paddingEnd="10dp" android:minWidth="70dp" android:gravity="center" />
            <Button android:id="@+id/btnBaeminMidAmountPlus" android:layout_width="38dp" android:layout_height="38dp"
                android:text="+" android:textSize="18sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:background="@drawable/bg_card" android:padding="12dp" android:layout_marginBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:text="배민 최소 금액" android:textColor="#E74C3C" android:textSize="14sp" android:textStyle="bold" />
            <Button android:id="@+id/btnBaeminReducedMinus" android:layout_width="38dp" android:layout_height="38dp"
                android:text="-" android:textSize="18sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
            <TextView android:id="@+id/tvBaeminReducedAmount" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="50원" android:textColor="#E74C3C" android:textSize="20sp" android:textStyle="bold"
                android:paddingStart="10dp" android:paddingEnd="10dp" android:minWidth="70dp" android:gravity="center" />
            <Button android:id="@+id/btnBaeminReducedPlus" android:layout_width="38dp" android:layout_height="38dp"
                android:text="+" android:textSize="18sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:background="@drawable/bg_card" android:padding="10dp" android:layout_marginBottom="6dp">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="쿠팡이츠 광고" android:textColor="#FFD700" android:textSize="13sp" android:textStyle="bold" />
                <TextView android:id="@+id/tvCoupangAdStatus" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="상태: --" android:textColor="#707088" android:textSize="11sp" />
            </LinearLayout>
            <Button android:id="@+id/btnCoupangAdOn" android:layout_width="wrap_content" android:layout_height="36dp"
                android:text="켜기" android:textSize="13sp" android:textColor="#FFF" android:backgroundTint="#2ECC71" android:layout_marginEnd="4dp" />
            <Button android:id="@+id/btnCoupangAdOff" android:layout_width="wrap_content" android:layout_height="36dp"
                android:text="끄기" android:textSize="13sp" android:textColor="#FFF" android:backgroundTint="#E74C3C" />
        </LinearLayout>

        <!-- 5순위: 직접열기 + 로그인 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="4dp">
            <Button android:id="@+id/btnOpenBaemin" android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                android:text="배민 직접열기" android:textSize="12sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginEnd="3dp" />
            <Button android:id="@+id/btnOpenCoupang" android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                android:text="쿠팡 직접열기" android:textSize="12sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="3dp" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="6dp">
            <Button android:id="@+id/btnBaeminLogin" android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                android:text="배민 로그인" android:textSize="12sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginEnd="3dp" />
            <Button android:id="@+id/btnCoupangLogin" android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                android:text="쿠팡 로그인" android:textSize="12sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="3dp" />
        </LinearLayout>

        <!-- 6순위: 로그 -->
        <Button android:id="@+id/btnAdLog" android:layout_width="match_parent" android:layout_height="36dp"
            android:text="광고 자동화 로그" android:textSize="12sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
    </LinearLayout>

    <!-- ══════════ 3. 지연 설정 ══════════ -->

    <!-- 모드 선택 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/btnModeSemi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="반자동 (알림만)"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2ECC71"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnModeAuto"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="자동 (앱 조작)"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2A2A45"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- 지연 기준: 쿠팡/배민 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card"
        android:padding="10dp"
        android:layout_marginBottom="6dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="쿠팡" android:textColor="#FFD700" android:textSize="13sp" android:textStyle="bold" />
        <Button android:id="@+id/btnCoupangMinus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="-" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="6dp" />
        <TextView android:id="@+id/tvCoupangThreshold" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10건" android:textColor="#FFD700" android:textSize="18sp" android:textStyle="bold"
            android:paddingStart="6dp" android:paddingEnd="6dp" android:minWidth="48dp" android:gravity="center" />
        <Button android:id="@+id/btnCoupangPlus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="+" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="배민" android:textColor="#2AC1BC" android:textSize="13sp" android:textStyle="bold" />
        <Button android:id="@+id/btnBaeminMinus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="-" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="6dp" />
        <TextView android:id="@+id/tvBaeminThreshold" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="15건" android:textColor="#2AC1BC" android:textSize="18sp" android:textStyle="bold"
            android:paddingStart="6dp" android:paddingEnd="6dp" android:minWidth="48dp" android:gravity="center" />
        <Button android:id="@+id/btnBaeminPlus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="+" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
    </LinearLayout>

    <!-- 지연 시간 + 초기화/수동 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card"
            android:padding="10dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="지연" android:textColor="#9090A8" android:textSize="13sp" />
            <Button android:id="@+id/btnDelayMinus" android:layout_width="34dp" android:layout_height="34dp"
                android:text="-" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="6dp" />
            <TextView android:id="@+id/tvDelayMinutes" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="10분" android:textColor="#FFF" android:textSize="18sp" android:textStyle="bold"
                android:paddingStart="6dp" android:paddingEnd="6dp" android:minWidth="48dp" android:gravity="center" />
            <Button android:id="@+id/btnDelayPlus" android:layout_width="34dp" android:layout_height="34dp"
                android:text="+" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
        </LinearLayout>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="초기화"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2A2A45"
            android:layout_marginStart="6dp" />

        <Button
            android:id="@+id/btnManualDelay"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="수동지연"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E74C3C"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- ══════════ 4. 접근성/권한 ══════════ -->
    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="#2A2A45" android:layout_marginTop="10dp" android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView android:id="@+id/tvNotificationStatus" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="알림 ✓" android:textColor="#707088" android:textSize="12sp" android:layout_marginEnd="10dp" />
        <TextView android:id="@+id/tvAccessibilityStatus" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="접근성 ✓" android:textColor="#707088" android:textSize="12sp" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <Button android:id="@+id/btnPermissions" android:layout_width="wrap_content" android:layout_height="32dp"
            android:text="권한" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:textSize="12sp"
            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:layout_marginEnd="4dp" />
        <Button android:id="@+id/btnViewLog" android:layout_width="wrap_content" android:layout_height="32dp"
            android:text="로그" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:textSize="12sp"
            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:layout_marginEnd="4dp" />
        <Button android:id="@+id/btnUpdate" android:layout_width="wrap_content" android:layout_height="32dp"
            android:text="업데이트" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:textSize="12sp"
            android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
    </LinearLayout>

</LinearLayout>
</ScrollView>
