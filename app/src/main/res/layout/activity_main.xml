<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- ══════════ 1. 모니터링 현황 ══════════ -->

    <!-- 헤더: PosDelay + 메인 스위치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="모니터링"
            android:textColor="#E0E0EC"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- 모니터링 현황 카드 -->
    <LinearLayout
        android:id="@+id/layoutMonitorPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <!-- Row 1: 처리중 건수 + 상태 + +/- -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="처리중"
                android:textColor="#9090A8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOrderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="4dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정상"
                android:textColor="#2ECC71"
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnCountMinus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E74C3C"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnCountPlus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2ECC71" />
        </LinearLayout>

        <!-- Row 2: 광고 상태 (신호등) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배민"
                android:textColor="#2AC1BC"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBaeminLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="#707088"
                android:textSize="14sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvMonitorBaemin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#9090A8"
                android:textSize="13sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvBaeminThresholdInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(5/3)"
                android:textColor="#707088"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />

            <View
                android:layout_width="24dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠팡"
                android:textColor="#FFD700"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCoupangLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="#707088"
                android:textSize="14sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvMonitorCoupang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#9090A8"
                android:textSize="13sp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/tvCoupangThresholdInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(5/3)"
                android:textColor="#707088"
                android:textSize="11sp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <!-- Row 3a: KDS 동기화 (1순위) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvKdsLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="#707088"
                android:textSize="12sp"
                android:layout_marginEnd="3dp" />

            <TextView
                android:id="@+id/tvKdsSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KDS --"
                android:textColor="#707088"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="#2A2A45"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLastSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATE --"
                android:textColor="#707088"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="#2A2A45"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvPcLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="#707088"
                android:textSize="11sp"
                android:layout_marginEnd="2dp" />
            <TextView
                android:id="@+id/tvPcSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC --"
                android:textColor="#707088"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Row 3b: K/M/PC 토글 버튼 + 수집 카운트다운 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnPauseKds"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="K가동"
                android:textSize="11sp"
                android:textColor="#FFF"
                android:backgroundTint="#2ECC71"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnPauseMate"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="M가동"
                android:textSize="11sp"
                android:textColor="#FFF"
                android:backgroundTint="#2ECC71"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnPausePc"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="PC가동"
                android:textSize="11sp"
                android:textColor="#FFF"
                android:backgroundTint="#2ECC71"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvNextRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수집 --"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Row 4: 마지막 동작 + 정정 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tvLastAdAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="마지막: --"
                android:textColor="#707088"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnRefreshAd"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="정정"
                android:textSize="11sp"
                android:textColor="#FFF"
                android:backgroundTint="#3498DB"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ══════════ 2. 광고 관리 ══════════ -->
    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="#2A2A45" android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="광고 관리" android:textColor="#E0E0EC" android:textSize="16sp" android:textStyle="bold" />
        <Switch android:id="@+id/switchAdEnable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1순위: 밀림시 자동 조절 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:background="@drawable/bg_card"
            android:padding="14dp" android:layout_marginBottom="8dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="10dp">
                <LinearLayout android:id="@+id/layoutScheduleToggle" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="스케줄" android:textColor="#9090A8" android:textSize="13sp" />
                    <TextView android:id="@+id/tvScheduleLight" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text=" ●" android:textColor="#E74C3C" android:textSize="14sp" />
                </LinearLayout>
                <Button android:id="@+id/btnAdOnTime" android:layout_width="wrap_content" android:layout_height="28dp"
                    android:text="08:00" android:textSize="11sp" android:textColor="#2ECC71" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" android:layout_marginStart="6dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="~" android:textColor="#707088" android:textSize="12sp" android:layout_marginStart="2dp" android:layout_marginEnd="2dp" />
                <Button android:id="@+id/btnAdOffTime" android:layout_width="wrap_content" android:layout_height="28dp"
                    android:text="22:00" android:textSize="11sp" android:textColor="#E74C3C" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <!-- 쿠팡 임계값: 켜기(왼) 끄기(오) -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
                <LinearLayout android:id="@+id/layoutCoupangAutoToggle"
                    android:layout_width="52dp" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="쿠팡" android:textColor="#FFD700" android:textSize="15sp" android:textStyle="bold" />
                    <TextView android:id="@+id/tvCoupangAutoLight" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="●" android:textColor="#E74C3C" android:textSize="8sp" android:layout_marginStart="1dp" />
                </LinearLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="켜기" android:textColor="#2ECC71" android:textSize="13sp" android:layout_marginEnd="2dp" />
                <Button android:id="@+id/btnCoupangOnThMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvCoupangOnTh" android:layout_width="28dp" android:layout_height="wrap_content"
                    android:text="3" android:textColor="#2ECC71" android:textSize="20sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnCoupangOnThPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <View android:layout_width="16dp" android:layout_height="0dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="끄기" android:textColor="#E74C3C" android:textSize="13sp" android:layout_marginEnd="2dp" />
                <Button android:id="@+id/btnCoupangOffThMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvCoupangOffTh" android:layout_width="28dp" android:layout_height="wrap_content"
                    android:text="5" android:textColor="#E74C3C" android:textSize="20sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnCoupangOffThPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <!-- 쿠팡 게이지 -->
            <LinearLayout android:id="@+id/gaugeCoupang"
                android:layout_width="match_parent" android:layout_height="28dp"
                android:orientation="horizontal" android:layout_marginBottom="12dp" />

            <!-- 배민 임계값 + 금액: 최대(위) → 중간 → 최소(아래) -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="6dp">
                <LinearLayout android:id="@+id/layoutBaeminAutoToggle"
                    android:layout_width="52dp" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="배민" android:textColor="#2AC1BC" android:textSize="15sp" android:textStyle="bold" />
                    <TextView android:id="@+id/tvBaeminAutoLight" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="●" android:textColor="#E74C3C" android:textSize="8sp" android:layout_marginStart="1dp" />
                </LinearLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="최대" android:textColor="#2ECC71" android:textSize="13sp" android:layout_marginEnd="2dp" />
                <Button android:id="@+id/btnBaeminOnThMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminOnTh" android:layout_width="28dp" android:layout_height="wrap_content"
                    android:text="3" android:textColor="#2ECC71" android:textSize="20sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnBaeminOnThPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <View android:layout_width="16dp" android:layout_height="0dp" />
                <Button android:id="@+id/btnBaeminAmountMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminAmount" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="200원" android:textColor="#2ECC71" android:textSize="16sp" android:textStyle="bold"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:gravity="center" />
                <Button android:id="@+id/btnBaeminAmountPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="6dp">
                <View android:layout_width="52dp" android:layout_height="0dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="중간" android:textColor="#E67E22" android:textSize="13sp" android:layout_marginEnd="2dp" />
                <Button android:id="@+id/btnBaeminMidThMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminMidTh" android:layout_width="28dp" android:layout_height="wrap_content"
                    android:text="5" android:textColor="#E67E22" android:textSize="20sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnBaeminMidThPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <View android:layout_width="16dp" android:layout_height="0dp" />
                <Button android:id="@+id/btnBaeminMidAmountMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminMidAmount" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="100원" android:textColor="#E67E22" android:textSize="16sp" android:textStyle="bold"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:gravity="center" />
                <Button android:id="@+id/btnBaeminMidAmountPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="6dp">
                <View android:layout_width="52dp" android:layout_height="0dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="중간↑" android:textColor="#A0522D" android:textSize="12sp" android:layout_marginEnd="2dp" />
                <Button android:id="@+id/btnBaeminMidUpperThMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminMidUpperTh" android:layout_width="28dp" android:layout_height="wrap_content"
                    android:text="7" android:textColor="#A0522D" android:textSize="20sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnBaeminMidUpperThPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  (이상 회색)" android:textColor="#707088" android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
                <View android:layout_width="52dp" android:layout_height="0dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="최소" android:textColor="#E74C3C" android:textSize="13sp" android:layout_marginEnd="2dp" />
                <Button android:id="@+id/btnBaeminOffThMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminOffTh" android:layout_width="28dp" android:layout_height="wrap_content"
                    android:text="8" android:textColor="#E74C3C" android:textSize="20sp" android:textStyle="bold" android:gravity="center" />
                <Button android:id="@+id/btnBaeminOffThPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <View android:layout_width="16dp" android:layout_height="0dp" />
                <Button android:id="@+id/btnBaeminReducedMinus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="-" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
                <TextView android:id="@+id/tvBaeminReducedAmount" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="50원" android:textColor="#E74C3C" android:textSize="16sp" android:textStyle="bold"
                    android:paddingStart="4dp" android:paddingEnd="4dp" android:gravity="center" />
                <Button android:id="@+id/btnBaeminReducedPlus" android:layout_width="30dp" android:layout_height="30dp"
                    android:text="+" android:textSize="15sp" android:textColor="#FFF" android:backgroundTint="#2A2A45"
                    android:minWidth="0dp" android:minHeight="0dp" android:insetTop="0dp" android:insetBottom="0dp" />
            </LinearLayout>

            <!-- 배민 게이지 -->
            <LinearLayout android:id="@+id/gaugeBaemin"
                android:layout_width="match_parent" android:layout_height="28dp"
                android:orientation="horizontal" />

        </LinearLayout>

        <!-- 스케줄은 자동 줄에 합침 -->

        <!-- 광고 상태: 모니터링 카드에서 표시하므로 여기서 삭제 -->
    </LinearLayout>

    <!-- ══════════ 3. 지연 관리 ══════════ -->
    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="#2A2A45" android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="지연 관리" android:textColor="#E0E0EC" android:textSize="16sp" android:textStyle="bold" />

        <TextView android:id="@+id/btnModeSemi" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="알림만" android:textColor="#2ECC71" android:textSize="13sp" android:textStyle="bold"
            android:padding="6dp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="|" android:textColor="#707088" android:textSize="13sp"
            android:layout_marginStart="2dp" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/btnModeAuto" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="자동" android:textColor="#707088" android:textSize="13sp"
            android:padding="6dp" />
    </LinearLayout>

    <!-- 지연 기준: 쿠팡/배민 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card"
        android:padding="10dp"
        android:layout_marginBottom="6dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="쿠팡" android:textColor="#FFD700" android:textSize="13sp" android:textStyle="bold" />
        <Button android:id="@+id/btnCoupangMinus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="-" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="6dp" />
        <TextView android:id="@+id/tvCoupangThreshold" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10건" android:textColor="#FFD700" android:textSize="18sp" android:textStyle="bold"
            android:paddingStart="6dp" android:paddingEnd="6dp" android:minWidth="48dp" android:gravity="center" />
        <Button android:id="@+id/btnCoupangPlus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="+" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="배민" android:textColor="#2AC1BC" android:textSize="13sp" android:textStyle="bold" />
        <Button android:id="@+id/btnBaeminMinus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="-" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="6dp" />
        <TextView android:id="@+id/tvBaeminThreshold" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="15건" android:textColor="#2AC1BC" android:textSize="18sp" android:textStyle="bold"
            android:paddingStart="6dp" android:paddingEnd="6dp" android:minWidth="48dp" android:gravity="center" />
        <Button android:id="@+id/btnBaeminPlus" android:layout_width="34dp" android:layout_height="34dp"
            android:text="+" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
    </LinearLayout>

    <!-- 지연 시간 + 초기화/수동 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card"
            android:padding="10dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="지연" android:textColor="#9090A8" android:textSize="13sp" />
            <Button android:id="@+id/btnDelayMinus" android:layout_width="34dp" android:layout_height="34dp"
                android:text="-" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" android:layout_marginStart="6dp" />
            <TextView android:id="@+id/tvDelayMinutes" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="10분" android:textColor="#FFF" android:textSize="18sp" android:textStyle="bold"
                android:paddingStart="6dp" android:paddingEnd="6dp" android:minWidth="48dp" android:gravity="center" />
            <Button android:id="@+id/btnDelayPlus" android:layout_width="34dp" android:layout_height="34dp"
                android:text="+" android:textSize="16sp" android:textColor="#FFF" android:backgroundTint="#2A2A45" />
        </LinearLayout>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="초기화"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2A2A45"
            android:layout_marginStart="6dp" />

        <Button
            android:id="@+id/btnManualDelay"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="수동지연"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E74C3C"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- ══════════ 4. 기타 ══════════ -->
    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="#2A2A45" android:layout_marginTop="10dp" android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기타"
        android:textColor="#E0E0EC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView android:id="@+id/tvNotificationStatus" android:layout_width="wrap_content" android:layout_height="wrap_content"
